{
  "name": "square-word-wrap",
  "version": "0.0.2",
  "description": "Word wrap that tries to find a 'square' of text.",
  "main": "dist/",
  "scripts": {
    "build": "npm run build:docs && npm run build:babel && npm run build:browser",
    "build:docs": "grep -v 'docs/api/' ./README.md | sed 's/[(]docs\\//(..\\//' > /tmp/readme && jsdoc --verbose -d docs/api -c jsdoc.json -R /tmp/readme -r ./src",
    "build:babel": "babel ./src --out-dir dist --ignore '**/*.test.js'",
    "build:browser": "browserify -p browserify-prepend-licenses dist/index.js --standalone squareWordWrap -o dist/browser.js",
    "prepublishOnly": "npm run build",
    "preversion": "npm run test && npm run build && git diff-index --ignore-space-at-eol --quiet HEAD -- && u=`git ls-files --exclude-standard --others` && echo \"$u\" && test -z \"$u\"",
    "version": "npm run build && git add -A dist",
    "test": "npm run test:watch -- --single-run",
    "test:watch": "cross-env NODE_ENV=test karma start karma.conf.js",
    "lint": "eslint src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chrisjshull/square-word-wrap.git"
  },
  "author": "chrisjshull@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "browserify": "^14.4.0",
    "browserify-prepend-licenses": "^1.0.0",
    "chai": "^4.1.1",
    "cross-env": "^5.0.5",
    "eslint": "^4.5.0",
    "jsdoc": "^3.5.4",
    "jsdoc-escape-at": "^1.0.1",
    "karma": "^1.7.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-eslint": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-webpack": "^2.0.4",
    "mocha": "^3.5.0",
    "sinon": "^3.2.1",
    "webpack": "^3.5.5"
  },
  "dependencies": {
    "grapheme-splitter": "^1.0.2"
  }
}
